<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_detail_foot_viewswitcher"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/main_footer_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/message_detail_footbar_editebox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:background="@drawable/but_background_footer_edit"
            android:drawableLeft="@drawable/ic_action_edit"
            android:gravity="center"
            android:text="发表评论" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/message_detail_foot_editer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoLink="web|email"
            android:background="@drawable/edittext_footer"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/message_detail_foot_pubcomment"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:background="@drawable/but_actionbar_selector"
            android:src="@drawable/ic_menu_send"
            android:textColor="@color/black"
            android:textSize="14dip" />
    </LinearLayout>

</ViewSwitcher>