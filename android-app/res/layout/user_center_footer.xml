<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/main_footer_background"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/user_center_footbar_relation"
        style="@style/user_center_footbar"
        android:layout_marginLeft="15dip"
        android:drawableLeft="@drawable/widget_bar_relation_add"
        android:text="加关注"
        android:textColor="#565656" />

    <TextView
        style="@style/main_footbar_cutline"
        android:background="#a0a0a0" />

    <RadioButton
        android:id="@+id/user_center_footbar_message"
        style="@style/user_center_footbar"
        android:layout_marginLeft="20dip"
        android:drawableLeft="@drawable/widget_bar_mail"
        android:text="留言"
        android:textColor="#565656" />

    <TextView
        style="@style/main_footbar_cutline"
        android:background="#a0a0a0"  />

    <RadioButton
        android:id="@+id/user_center_footbar_atme"
        style="@style/user_center_footbar"
        android:layout_marginLeft="20dip"
        android:drawableLeft="@drawable/widget_bar_atme"
        android:text="提到Ta"
        android:textColor="#565656" />

</LinearLayout>